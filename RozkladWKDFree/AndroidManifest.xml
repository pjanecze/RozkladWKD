<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pj.rozkladWKD" android:versionName="1.9c" android:versionCode="23">

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="11"/>

    <!-- Only this application can receive the messages and registration result -->
    <permission android:name="pj.rozkladWKD.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="pj.rozkladWKD.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application android:icon="@drawable/ic_launcher_wkd" android:label="@string/app_name"
                 android:description="@string/description" android:debuggable="true"
                 android:name="pj.rozkladWKD.RozkladWKDApplication"
            android:hardwareAccelerated="true">

        <activity android:name=".RozkladWKD" android:label="@string/app_name"
                  android:theme="@style/rozkladWKD_style"
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="SearchResults" android:theme="@style/searchResults_style" android:configChanges="orientation"></activity>
        <activity android:name="SettingsActivity"
                  android:theme="@style/rozkladWKD_style"></activity>
        <activity android:name="com.google.ads.AdActivity"
                  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        <activity android:name="MessageActivity" android:theme="@style/rozkladWKD_style" android:configChanges="orientation"></activity>

        <!-- In order to use the c2dm library, an
       application must declare a class with the name C2DMReceiver, in its
       own package, extending com.google.android.c2dm.C2DMBaseReceiver

       It must also include this section in the manifest, replacing
       "com.google.android.apps.chrometophone" with its package name. -->
        <service android:name="C2DMReceiver" />

        <!-- Only google service can send data messages for the app. If permission is not set -
      any other app can generate it -->
        <receiver android:name="com.google.android.c2dm.C2DMBroadcastReceiver"
                  android:permission="com.google.android.c2dm.permission.SEND">
            <!-- Receive the actual message -->
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="pj.rozkladWKD" />
            </intent-filter>
            <!-- Receive the registration id -->
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="pj.rozkladWKD" />
            </intent-filter>
        </receiver>
    </application>



</manifest> 