<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/add_new_message_dialog_root">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:padding="5dp">
			<EditText android:id="@+id/add_new_message_dialog_username"
				android:layout_width="fill_parent" android:maxLength="30"  android:layout_height="fill_parent"
				android:hint="@string/username" />


			<EditText android:id="@+id/add_new_message_dialog_message"
				android:singleLine="false"
				android:maxLines="3"
				android:lines="3"
				android:gravity="top"
				android:inputType="textCapSentences|textMultiLine"
				android:maxLength="255" android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/message" />
				
			
		</LinearLayout>
	
		
	</ScrollView>
</LinearLayout>
